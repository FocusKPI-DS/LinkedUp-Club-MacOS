rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Workspace collections - MVP rules
    match /workspaces/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /workspace_members/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /ff_user_push_notifications/{document} {
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) == request.resource.data.sender;
      allow read: if request.auth != null && 
        (resource.data.user_refs.matches('.*' + request.auth.uid + '.*') || 
         resource.data.sender == /databases/$(database)/documents/users/$(request.auth.uid));
      allow write: if false;
      allow delete: if false;
    }

    match /ff_push_notifications/{document} {
      allow read: if request.auth != null && 
        (resource.data.target_audience == 'All' || 
         resource.data.target_audience == request.auth.uid);
      allow write: if false;
      allow delete: if false;
    }

    match /reports/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /user_memo/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /invitation_code/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /chats/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }

    match /chats/{parent}/messages/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /{path=**}/messages/{document} {
      allow read: if true;
    }

    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth != null; // Allow authenticated users to read any user (for chat names)
      allow update: if request.auth.uid == document;
      allow delete: if request.auth.uid == document;
    }

    // Gmail cache - users can only access their own cache
    match /users/{userId}/gmail_cache/{document} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Gmail watch - users can only access their own watch settings
    match /users/{userId}/gmail_watch/{document} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /events/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /events/{parent}/participant/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/participant/{document} {
      allow read: if true;
    }

    match /posts/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /posts/{parent}/comments/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/comments/{document} {
      allow read: if true;
    }

    match /event_attendees/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /payment_history/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    // Action Items - users can read their own and create/update/delete
    match /action_items/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // AI Assistant Conversations
    match /ai_assistant_conversations/{conversationId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.user_ref.id;
      
      // Allow AI agent to write to any conversation
      allow write: if request.auth != null 
        && request.auth.uid == "ai_agent_linkai";
    }

    // AI Assistant Messages
    match /ai_assistant_conversations/{conversationId}/messages/{messageId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == get(/databases/$(database)/documents/ai_assistant_conversations/$(conversationId)).data.user_ref.id;
      
      // AI agent can write messages
      allow write: if request.auth != null 
        && request.auth.uid == "ai_agent_linkai";
    }

    match /{document=**} {
      allow read, write: if request.auth.token.email.matches("firebase@flutterflow.io");
    }

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At that time, all client
    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // all client requests to your Firestore database will be denied until you Update
    // your rules
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 12, 10);
    }
  }
}
